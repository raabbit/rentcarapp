<p id="notice"><%= notice %></p>

<h1>Listing Offers</h1>

  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Email address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.title %></td>
        <td><%= offer.description %></td>
        <td><%= offer.price %></td>
        <td><%= offer.email_address %></td>
        <td><%= offer.phone %></td>
        <td><%= link_to 'Show', offer %></td>
        <% if offer.user == current_user %>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
<br>

<%= link_to 'New Offer', new_offer_path %>
